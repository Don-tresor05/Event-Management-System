@page
@model IndexModel
@{
    ViewData["Title"] = "EventEase | Home";
}

<!-- CSS Styling -->
<style>
    body {
        padding-top: 70px; /* Prevent navbar overlap */
    }

    .hero {
        padding: 80px 0;
    }

        .hero img {
            max-width: 100%;
            height: auto;
        }

    .step img {
        max-width: 100px;
        margin-bottom: 15px;
    }

    .footer {
        background-color: white;
        color: #0d6efd;
        padding: 40px 0;
        box-shadow: 0 -4px 6px rgba(0, 0, 0, 0.1);
    }

        .footer a {
            color: #0d6efd;
            text-decoration: none;
        }

            .footer a:hover {
                text-decoration: underline;
            }
</style>

<!-- Nav Bar -->
<nav class="navbar navbar-expand-lg bg-white fixed-top">
    <div class="container-fluid">
        <a class="navbar-brand fw-bold" asp-page="/Index">EventEase</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" asp-page="/Index">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="#how_it_works">How it Works</a></li>
                <li class="nav-item"><a class="nav-link" asp-page="/Events">Events</a></li>
                <li class="nav-item"><a class="nav-link" asp-page="/Contact">Contact</a></li>
            </ul>
        </div>
        <form class="d-flex">
            <input class="form-control me-2" type="search" placeholder="Search">
            <button class="btn btn-outline-primary me-2" type="submit">Search</button>
            <a asp-page="/Login" class="btn btn-primary">Get Started</a>
        </form>
    </div>
</nav>

<!-- Hero Section -->
<section class="hero">
    <div class="container">
        <div class="row align-items-center">
            <!-- Text Content -->
            <div class="col-md-6">
                <h1 class="fw-bold">Create & Discover Events with Ease</h1>
                <p class="lead">Organize events, get tickets, and explore exciting experiences near you. Whether you're hosting or attending, we've got you covered.</p>
                <a asp-page="/Events" class="btn btn-primary btn-lg">Explore Events</a>
            </div>
            <!-- Image -->
            <div class="col-md-6 text-center">
                <img src="~/images/undraw_events_0w4f.svg" alt="Event Image">
            </div>
        </div>
    </div>
</section>

<!-- How It Works Section -->
<section class="how-it-works text-center py-5" id="how_it_works">
    <div class="container">
        <h1 class="fw-bold mb-4" data-aos="fade-up">How It Works</h1>
        <div class="row">
            <div class="col-md-2 offset-md-1 step" data-aos="fade-up">
                <img src="~/images/undraw_authentication_tbfc.svg" alt="Login">
                <h5>Login</h5>
                <p>Create an account or sign in to get started.</p>
            </div>
            <div class="col-md-2 step" data-aos="fade-up" data-aos-delay="100">
                <img src="~/images/undraw_choice_dzxz.svg" alt="Choose Event">
                <h5>Choose Event</h5>
                <p>Browse and select an event you want to attend.</p>
            </div>
            <div class="col-md-2 step" data-aos="fade-up" data-aos-delay="500">
                <img src="~/images/undraw_online-payments_p97e.svg" alt="Buy Ticket">
                <h5>Buy Ticket</h5>
                <p>Secure your ticket with a seamless checkout process.</p>
            </div>
            <div class="col-md-2 step" data-aos="fade-up" data-aos-delay="900">
                <img src="~/images/undraw_receipt_tzi0.svg" alt="Get Ticket">
                <h5>Get Ticket</h5>
                <p>Receive your e-ticket instantly via email.</p>
            </div>
            <div class="col-md-2 step" data-aos="fade-up" data-aos-delay="1300">
                <img src="~/images/undraw_dashboard_p93p.svg" alt="Dashboard">
                <h5>Manage via Dashboard</h5>
                <p>View and manage all your event tickets easily.</p>
            </div>
        </div>
    </div>
</section>

<!-- Footer Section -->
<footer class="footer mt-5">
    <div class="container text-center">
        <div class="row">
            <div class="col-md-4">
                <h5>About Us</h5>
                <p>EventEase helps you discover and manage events effortlessly.</p>
            </div>
            <div class="col-md-4">
                <h5>Quick Links</h5>
                <ul class="list-unstyled">
                    <li><a asp-page="/Index">Home</a></li>
                    <li><a href="#how_it_works">How it Works</a></li>
                    <li><a asp-page="/Events">Events</a></li>
                    <li><a asp-page="/Contact">Contact</a></li>
                </ul>
            </div>
            <div class="col-md-4">
                <h5>Follow Us</h5>
                <div class="social-icons">
                    <!-- Social icons here -->
                </div>
            </div>
        </div>
        <hr>
        <p class="mb-0">&copy; 2025 EventEase. All rights reserved.</p>
    </div>
</footer>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
    <script>
        AOS.init();
    </script>
}